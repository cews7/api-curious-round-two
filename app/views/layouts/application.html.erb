<!DOCTYPE html>
<html>
<head>
  <title>ApiCurious</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>

<body>
  <ul class="nav nav-pills">
    <li role="presentation" class="active"> <%= link_to "Home", root_path %> </li>
    <% if current_user %>
    <li role="presentation" class="active"><%= link_to "Sign Out", logout_path, method: :delete %></a></li>
    <% else %>
    <li role="presentation" class="active"><%= link_to "Sign in with Twitter", login_path %></a></li>
    <% end %>
  </ul>
  <%= yield %>
</body>
</html>
